            <div class="visual">
                <i class="fa fa-globe"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-counter="counterup" data-value="<%- memberCount %>"></span></div>
                <div class="desc">Members</div>
            </div>
            <a class="more" href="/members"> View more
												<i class="m-icon-swapright m-icon-white"></i>
											</a>
        </div>
    </div>

    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat red">
            <div class="visual">
                <i class="fa fa-globe"></i>
            </div>
