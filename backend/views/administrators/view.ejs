<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<!-- BEGIN HEAD -->

<head>
    <meta charset="utf-8" />
    <div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/dashoboard">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
             <a href="/administrators">Administrators</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
             
        <%= admin.fname %>
        <%= admin.lname %>
        </li>
    </ul>
</div>
</head>

<body>
    
    <!-- BEGIN PAGE TITLE-->
    <h3 class="page-title">
         <%=admin.fname%>
            <%=admin.lname%>
    </h3>
    <!-- END PAGE TITLE-->

    <!-- END PAGE HEADER-->
    <div class="row">
        <div class="col-md-12">

            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            
                         <a href="/administrators/setstatusActive/<%= admin.id%>"  id="active" name="active" class="btn btn-transparent green active" title="Make administrator active"><i class="fa fa-edit"></i><span class="hidden-xs"> Active</span></a>
                         <a href="/administrators/setstatusInactive/<%= admin.id%>"  id="inactive" name ="inactive" class="btn btn-transparent red active" title="Make administrator inactive"><i class="fa fa-edit"></i><span class="hidden-xs"> InActive</span></a>
                            <a href="/administrators" class="btn default" title="Go Back"><i class="fa fa-mail-reply"></i><span class="hidden-xs"> Back</span></a>
                            <a href="/administrators/edit/<%= admin.id%>" class="btn btn-transparent green active" title="Edit administrator details"><i class="fa fa-edit"></i><span class="hidden-xs"> Edit</span></a>
                            <a href="/administrators/delete/<%= admin.id%>" class="btn btn-sm red delete" title="Delete administrator details" data-confirm="Are you sure to delete this item?"><i class="fa fa-trash-o"  ></i>&nbsp;Delete</a>
                        </div>
                    </div>
                    <h3 class="form-section">Administrator Info</h3>
                </div>
                <div class="portlet-body form form-horizontal">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-3">First Name  :</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static">
                                            <%= admin.fname %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Last Name :</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static">
                                            <%= admin.lname %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Email :</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static">
                                            <%= admin.email %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Status :</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="getstatusValue">
                                            <%= admin.status %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                    </div>
                    <!-- END FORM-->
                </div>
            </div>
        </div>
    </div>
    <script src="/global/scripts/myutils.js" type="text/javascript"></script>
    <script type="text/javascript">
    
        jQuery(document).ready(function () {
            var  sattusCheck = $("#getstatusValue").text().trim();
            if(sattusCheck == "Active"){
                $('#active').hide('fast');
                 $('#inactive').show('fast');
            }
              if(sattusCheck == "Inactive"){
                   $('#active').show('fast');
                $('#inactive').hide('fast');
                
            }
        });
    </script>
</body>
</html>