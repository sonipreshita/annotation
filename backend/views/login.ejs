     <script>
    
            function getCookie(name) {
                    var dc = document.cookie;
                    var prefix = name + "=";
                    var begin = dc.indexOf("; " + prefix);
                    if (begin == -1) {
                        begin = dc.indexOf(prefix);
                        if (begin != 0) return null;
                    }
                    else {
                        begin += 2;
                        var end = document.cookie.indexOf(";", begin);
                        if (end == -1) {
                            end = dc.length;
                        }
                    }
                    var newValue = unescape(dc.substring(begin + prefix.length, end));
                    console.log(newValue);
                    return JSON.parse(newValue);
                }
                function checkCookie() {
                    var username = getCookie("remember");
                    if (username.user[2] === 'true') {
                        $('#check').attr('checked', 'checked')
                        $('#uniform-check').find('span').addClass('checked')
                        document.getElementById("check").value = 'true'
                        document.getElementById("password").value = username.user[1]
                        document.getElementById("email").value = username.user[0]
                    }
                }

            
    </script>
