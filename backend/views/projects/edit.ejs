<head>
    <meta charset="utf-8" />

</head>

<body>
    <h3 class="page-title">
        <%=project.name%>
             <small>edit details</small></h3>
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">

                <div class="portlet-title">
                    <div class="actions">
                        <div class="btn-group">
                            <a href="/projects" class="btn default" title="Back"><i class="fa fa-mail-reply"></i>&nbsp;Back </a>&nbsp;
                        </div>
                        <div class="btn-group">
                            <a href="/deleteprojects/<%= project.id%>" class="btn btn-sm red delete" title="Delete administrator details" data-confirm="Are you sure to delete this item?"><i class="fa fa-trash-o"  ></i>&nbsp;Delete</a>

                        </div>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">

                        <h3 class="form-section">Projects Info</h3>
                        <form action="/updateprojects/<%= project.id%>" method="post" enctype="multipart/form-data" class="form-horizontal"
                            id="form_sample_4">

                            <div class="alert alert-danger display-hide">
                                <button class="close" data-close="alert"></button> You have some form errors. Please check
                                below.
                            </div>

                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Project Name<span aria-required="true"> * </span></label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="project_name" id="fname" value="<%- project.name %>" placeholder="Enter first name">
                                            <span id="validFname" style="color:red"></span>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Image<span aria-required="true"> * </span></label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="image" id="image" value="<%- project.image %>" placeholder="Enter last name">
                                            <span id="validLname" style="color:red"></span>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <div class="row">                             

                                <!--/row-->

                                <!--/span-->
                            </div>
                            <!--/row-->

                    </div>
                    <div class="form-actions right">
                        <a href="/projects" class="btn default" title="Cencel"><i class="fa fa-mail-reply"></i>&nbsp;Cancel</a>
                        <button name="submitFormButton" type="submit" id="inputValidate" class="btn blue" title="Save"><i class="fa fa-check"></i> Save</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/global/scripts/myutils.js" type="text/javascript"></script>
</body>

</html>