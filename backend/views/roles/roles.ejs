    <script>
         toastr.success('<%=(message) %>');
         toastr.options.timeOut = 1500;
      </script>
    <% }) %>
  
    <h3 class="page-title">Roles</h3>
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light portlet-fit portlet-datatable bordered">
                <div class="portlet-title">
                    <div class="actions">
                        <!-- <div class="btn-group">
                            <a href="/projects/add" class="btn default blue-stripe" title="Add new user"><i class="fa fa-plus"></i><span class="hidden-xs"> New Project</span></a>                            </div> -->
