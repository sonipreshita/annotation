    function fieldsValidation(e) {
        
                var email = document.getElementById('email').value;
                var filter = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
                var flag = true;
              
                if ((!filter.test(email)) || email === '') {
                    flag = false;
                    document.getElementById("validEmail").innerHTML = "Please enter email address.";
                }
               
                if (flag === true) {
                    document.getElementsByName("submitFormButton")[0].type = "submit";
                    
                }
            }
    </script>
    
